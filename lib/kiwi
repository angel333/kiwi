#!/usr/bin/env bash

#
# Defaults
#

VERSION="0.0.1"
VERBOSE=0

#
# Output usage
#

usage() {
cat << EOF
Usage:
  
  ${0##*/} [options] [arguments]

Options:
  -v, --verbose     Verbose
  -V, --version     Current version triplet
  -h, --help        Help information
EOF
}

#
# Parse options
#

while [[ $# -gt 0 ]]; do
  token=$1; shift
  case $token in
    -v|--verbose) VERBOSE=1 ;;
    -V|--version) echo $VERSION ;;
    -h|--help) usage ;;
  esac
done