#!/usr/bin/env bash

VERSION="0.0.1"

#
# Output usage
#

usage() {
cat << EOF
Usage:
  
  ${0##*/} [options] [arguments]

Options:
  -v     Verbose
  -d     Debug level
  -V     Output version
  -h     Help information
EOF
}

#
# Parse options
#

DEBUG=
VERBOSE=
while getopts "hvVd:" option
  do
    case $option in
      d)
        DEBUG=$OPTARG
        echo $DEBUG
        ;;
      v)
        VERBOSE=1
        ;;
      V)
        echo $VERSION
        ;;
      \?|h)
        usage
        exit
        ;;
  esac
done