#!/usr/bin/env bash

#
# Defaults
#

VERSION="0.0.1"
VERBOSE=

#
# Output usage
#

usage() {
cat << EOF
Usage:
  
  ${0##*/} [options] [arguments]

Options:
  -v, --verbose     Verbose
  -V, --version     Current version triplet
  -h, --help        Help information
EOF
}

#
# Abort with the given <msg ...>
# 
# <msg ...>
#

abort() {
  echo $* && exit 1
}

#
# Install a seed.
# 
# <name>
#

install() {
  if [ ! $1 ]; then abort seed name required.; fi
  if [ $VERBOSE ]; then echo ... installing $1; fi
}

#
# Parse arguments
#

while [[ $# -gt 0 ]]; do
  arg=$1; shift
  case $arg in
    -v|--verbose) VERBOSE=1 ;;
    -V|--version) echo $VERSION ;;
    -h|--help) usage ;;
    --*) echo invalid option $arg. Use --help for more information ;;
    install) install $1 ;;
  esac
done
